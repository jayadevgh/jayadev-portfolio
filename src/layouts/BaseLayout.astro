---
import "../styles/global.css";

const { title = "Jayadev" } = Astro.props;
---

<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="bg-background text-white min-h-screen antialiased">
    <nav class="w-full px-8 py-6 flex items-center justify-between border-b border-white/10">
      <div class="font-semibold text-lg">Jayadev</div>
      <div class="flex gap-6">
        <a href="/" class="hover:text-accent transition">Home</a>
        <a href="/research" class="hover:text-accent transition">Research</a>
        <a href="/projects" class="hover:text-accent transition">Projects</a>
        <a href="/music" class="hover:text-accent transition">Music</a>
        <a href="/blogs" class="hover:text-accent transition">Blogs</a>
        <a href="/about" class="hover:text-accent transition">About</a>
      </div>
    </nav>

    <main class="px-8 py-12">
      <slot />
    </main>

    <!-- Global Scroll to Top Button -->
    <button
      id="scrollToTop"
      onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
      class="fixed bottom-8 right-8 w-12 h-12 rounded-full bg-accent hover:bg-accent/80 text-white shadow-lg transition-all opacity-0 pointer-events-none z-50 flex items-center justify-center"
      aria-label="Scroll to top"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
      </svg>
    </button>

    <script>
      const scrollToTopBtn = document.getElementById('scrollToTop');

      window.addEventListener('scroll', () => {
        if (window.scrollY > 300) {
          scrollToTopBtn.classList.remove('opacity-0', 'pointer-events-none');
          scrollToTopBtn.classList.add('opacity-100');
        } else {
          scrollToTopBtn.classList.add('opacity-0', 'pointer-events-none');
          scrollToTopBtn.classList.remove('opacity-100');
        }
      });
    </script>
  </body>
</html>
